<section id="" class="team-content">
  <div class="container ps-5 pe-5">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
        <small>BARANGAY PIO DEL PILAR</small>
        <h1>SK Officials</h1>
      </div>
    </div>

    <div class="row d-flex justify-content-center mt-5">
    {% for row in rows[0]['#rows'] %}
        {% set position = row['#row']._entity.field_position.value %}
          {% if position == 'SK Chairman' %}
  <div class="views-view-grid__item-inner col-12 brgy-staff text-center">
{% else %}
  <div class="views-view-grid__item-inner col brgy-staff text-center">
{% endif %}

          <!-- Display Profile Image -->
          {% if row['#row']._entity.field_sk_image_profile.entity.uri.value %}
            <div class="image-profile d-flex justify-content-center align-items-center">
              <img src="{{ file_url(row['#row']._entity.field_sk_image_profile.entity.uri.value) }}" alt="Profile Image" class="img-fluid">
            </div>
          {% endif %}

          <!-- Display Name -->
          {% if row['#row']._entity.field_sk_profile_name.value %}
            <h4>{{ row['#row']._entity.field_sk_profile_name.value }}</h4>
          {% endif %}

          <!-- Display Position -->
          {% if row['#row']._entity.field_sk_profile_position.value %}
            <p>{{ row['#row']._entity.field_sk_profile_position.value }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
